{
  "appId": "com.teamscheduler.app",
  "productName": "Team Schedule Generator",
  "files": [
    "public/**/*",
    "client/build/**/*",
    "server.js",
    "package.json",
    "node_modules/**/*"
  ],
  "extraFiles": [
    {
      "from": ".",
      "to": ".",
      "filter": ["server.js", "package.json"]
    },
    {
      "from": "node_modules",
      "to": "node_modules"
    }
  ],
  "directories": {
    "buildResources": "assets"
  },
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ]
  },
  "portable": {
    "artifactName": "${productName}-${version}-portable.exe"
  }
}
