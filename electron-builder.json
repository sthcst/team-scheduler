{
  "appId": "com.teamscheduler.app",
  "productName": "Team Schedule Generator",
  "files": [
    "public/**/*",
    "client/build/**/*",
    "server.js",
    "package.json",
    "node_modules/**/*"
  ],
  "directories": {
    "buildResources": "assets"
  },
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "forceCodeSigning": false,
    "signExts": []
  },
  "portable": {
    "artifactName": "${productName}-${version}-portable.exe"
  }
}
