{
  "name": "team-scheduler",
  "version": "1.0.0",
  "description": "Team schedule generator application",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5000 && electron .\"",
    "electron-build": "npm run build && electron-builder",
    "electron-build-portable": "npm run build && electron-builder --win portable"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "nodemon": "^3.0.1",
    "wait-on": "^9.0.3"
  }
}
